<Window         x:Class="BitmapManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BitmapManagerWPF"
        mc:Ignorable="d"
        Title="Bitmap Manager" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="LoadBitmapBtn" Content="Load Bitmap" Click="LoadBitmapBtn_Click" Margin="0,0,10,0"/>
            <TextBox x:Name="BitmapNameTxt" Width="200" Margin="0,0,10,0" Text="Enter bitmap name"/>
            <Button x:Name="StoreBitmapBtn" Content="Store Bitmap" Click="StoreBitmapBtn_Click" Margin="0,0,10,0"/>
            <TextBox x:Name="SearchIdTxt" Width="200" Margin="0,0,10,0" Text="Enter ID to search"/>
            <Button x:Name="RetrieveBitmapBtn" Content="Retrieve Bitmap" Click="RetrieveBitmapBtn_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Bitmap Display -->
            <Border Grid.Column="0" Margin="10" BorderBrush="Gray" BorderThickness="1">
                <Image x:Name="BitmapImage" Stretch="Uniform" Margin="5"/>
            </Border>

            <!-- Metadata Panel -->
            <Border Grid.Column="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Bitmap Metadata" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock x:Name="MetadataId" Text="ID: " Margin="0,0,0,5"/>
                        <TextBlock x:Name="MetadataName" Text="Name: " Margin="0,0,0,5"/>
                        <TextBlock x:Name="MetadataTime" Text="Stored Time: " Margin="0,0,0,10"/>
                        <Separator/>
                        <TextBlock Text="Stored Bitmaps:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <ListBox x:Name="BitmapListBox" Height="300" SelectionChanged="BitmapListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Id}" FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding UtcStoredTime}" FontSize="10"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>